{%- from "../components/components.njk" import component -%}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Wing Pang</title>
    {% for cssFile in collections.stylesheets %}
        <link rel="stylesheet" href="{{ cssFile.url }}">
    {% endfor %}
    <link rel="stylesheet" href="../../stylesheets/global.css"/>
    <link rel="stylesheet" href="/node_modules/lightgallery/css/lightgallery-bundle.css"/>

    <link href="https://github.com/wingywing" rel="me">
    <link rel="webmention" href="https://webmention.io/wing-2023-portfolio.netlify.app/webmention" />
    <link rel="pingback" href="https://webmention.io/wing-2023-portfolio.netlify.app/xmlrpc" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/gsap/dist/all.js"></script>
    <script type="text/javascript" src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>


    <script>
        var backlink = document.getElementById('back-link')
        backlink.setAttribute('href', document.referrer);

        backlink.onclick = function() {
            history.back();
            return false;
        }
    </script>
</head>
<body>

    <a href="#main-content" class="skip-main">Skip to main content</a>
    {% include "src/_includes/components/header/header.njk" %}
    <main id="main-content">
        {% block content %}{% endblock %}
        {{ content | safe }}
    </main>

    <script src="/node_modules/lightgallery/lightgallery.min.js"></script>
    <script src="/node_modules/lightgallery/plugins/thumbnail/lg-thumbnail.min.js"></script>
    <script src="/node_modules/lightgallery/plugins/zoom/lg-zoom.min.js"></script>
    <script src="/node_modules/lightgallery/plugins/video/lg-video.min.js"></script>


    <script type="text/javascript">
        var galleries = document.getElementsByClassName('lightgallery');
        for (let item of galleries) {
            lightGallery(item, {
                thumbnail: true,
                plugins: [lgZoom, lgThumbnail, lgVideo],
                licenseKey: '685DED29-DB6A49B0-8BE25647-A8269362',
                subHtmlSelectorRelative: true,
                download: false,
            })
        }
        const $lgContainer = document.getElementById("inline-gallery-container");
        const lg = lightGallery($lgContainer, {
        licenseKey: '685DED29-DB6A49B0-8BE25647-A8269362',
        speed: 500,
        container: $lgContainer,
        // Do not allow users to close the gallery
        closable: false,
        // Add maximize icon to enlarge the gallery
        showMaximizeIcon: true,
        plugins: [lgZoom, lgThumbnail]
        });
        lg.openGallery(0); 
    </script>

    <script>
        if (window.netlifyIdentify) {
            window.netlifyIdentify.on("init", user => {
                if (!user) {
                    window.netlifyIdentify.on("login", () => {
                        document.location.href = "/admin/";
                    });
                }
            });
        }
    </script>

</body>
</html>