{%- from "components/components.njk" import component -%}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | Wing Pang</title>
    {% for cssFile in collections.stylesheets %}
        <link rel="stylesheet" href="{{ cssFile.url }}">
    {% endfor %}
    <link rel="stylesheet" href="/stylesheets/global.css"/>
    <link rel="stylesheet" href="/js/lightgallery/css/lightgallery-bundle.css"/>

    <link href="https://github.com/wingywing" rel="me">
    <link href="https://web.brid.gy/r/https://wingpang.com" rel="me">
    <link rel="webmention" href="https://webmention.io/wingpang.com/webmention" />
    <link rel="pingback" href="https://webmention.io/wingpang.com/xmlrpc" />

    <link rel="search" type="application/pagefind" href="/writing/pagefind" title="Wing Pang | Writing">
    <link rel="authorization_endpoint" href="https://indieauth.com/auth">

    <link rel="micropub" href="https://indiekit.wingpang.com/micropub">
    <link rel="authorization_endpoint" href="https://indiekit.wingpang.com/auth">
    <link rel="token_endpoint" href="https://indiekit.wingpang.com/auth/token">
    <link rel="indieauth-metadata" href="https://indiekit.wingpang.com/.well-known/oauth-authorization-server">  

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="/js/jquery.js"></script>
    <script src="/js/gsap.js"></script>
    {# Code for leaflet map if it's on the Now page #}
    {% if title == "Now" %}
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""/>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""></script>
    {% endif %}

    <script>
        var backlink = document.getElementById('back-link')
        if (backlink != null) {
            backlink.setAttribute('href', document.referrer);

            backlink.onclick = function() {
                history.back();
                return false;
            }
        }
    </script>
</head>
<body>

    <a href="#main-content" class="skip-main">Skip to main content</a>
    {% include "src/_includes/components/header/header.njk" %}
    <main id="main-content">
        {% block content %}{% endblock %}
        {{ content | safe }}
    </main>

    <script src="/js/lightgallery/lightgallery.min.js"></script>
    <script src="/js/lightgallery/plugins/thumbnail/lg-thumbnail.min.js"></script>
    <script src="/js/lightgallery/plugins/zoom/lg-zoom.min.js"></script>
    <script src="/js/lightgallery/plugins/video/lg-video.min.js"></script>


    <script type="text/javascript">
        var galleries = document.getElementsByClassName('lightgallery');
        for (let item of galleries) {
            lightGallery(item, {
                thumbnail: true,
                plugins: [lgZoom, lgThumbnail, lgVideo],
                licenseKey: '685DED29-DB6A49B0-8BE25647-A8269362',
                subHtmlSelectorRelative: true,
                download: false,
            })
        }
        const $lgContainer = document.getElementById("inline-gallery-container");
        const lg = lightGallery($lgContainer, {
        licenseKey: '685DED29-DB6A49B0-8BE25647-A8269362',
        speed: 500,
        container: $lgContainer,
        // Do not allow users to close the gallery
        closable: false,
        // Add maximize icon to enlarge the gallery
        showMaximizeIcon: true,
        plugins: [lgZoom, lgThumbnail]
        });
        if ($lgContainer) {
            lg.openGallery(0); 
        }
    </script>


</body>
</html>