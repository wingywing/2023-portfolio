    </h1>  
    <aside>You found me!
        <br/>
        <a href="/notesfeed.xml">Follow my notes RSS</a>
    </aside>
    <div class="writing-posts">
        <ul>
            {%- for note in collections.notes -%}
            {% set replies = note.data.webmentions | getWebmentionsByTypes(['mention-of', 'in-reply-to'])%}
            {% set reactions = note.data.webmentions | getWebmentionsByTypes(['like-of', 'repost-of', 'bookmark-of']) %}
            {% set mentions = note.data.webmentions | getWebmentionsByTypes(['mention-of']) %}
            {% set inreplies = note.data.webmentions | getWebmentionsByTypes(['in-reply-to'])%}
                <li class="post-thumbnail">
                    <div class="post-header note">
                        {% if note.data.title %}
                            <h2 class="p-name"> {{ note.data.title }}</h1>
                        {% endif %}
                            <time class="dt-published" data-pagefind-sort="date">{% if note.date %} {{ note.date | date }} {% endif %}</time>
                        {% if note.data.notetype == "reply" %}
                            <span>In reply to: <a class="u-in-reply-to mention-link" href="{{ note.data.targetLink }}">{{ note.data.targetLink }}</a></span> 
                        {% endif %}
                        {% if note.data.notetype == "like" %}
                        
                            <span>Liked post: <a class="u-like-of mention-link" href="{{ note.data.targetLink }}">{{ note.data.targetLink }}</a></span> 
                        {% endif %}
                        {% if note.data.notetype == "bookmark" %}
                            <span>Bookmarked post: <a class="u-bookmark-of h-cite mention-link" href="{{ note.data.targetLink }}">{{ note.data.targetLink }}</a></span> 
                        {% endif %}
                    </div>
                    <a class="post-thumbnail__link" href="{{ note.url }}"><span>Link to open note</span></a>
                    <div class="note-content">
                    {% if note.data.imageSrc %}
                        <img class="u-photo" src="{{ note.data.imageSrc }}" alt="{{ note.data.alt }}"/>
                    {% endif %}
                    {{ note.content | safe }}
                    </div>
                    <div class="blogpost-footer">
                        <div class="tags" id="blogpost-footer-tags">
                            {% for tag in note.data.tags %}
                                <div class="tag">
                                    #{{ tag }}
                                </div>
                            {% endfor %}
                        </div>
                        <div id="blogpost-footer-actions">
                            <span class="like"><img src="/assets/img/icons/heart.svg" alt=""> {{ reactions.length }}</span>
                            <span class="reply"><img src="/assets/img/icons/comment.svg" alt="">{{ replies.length }}</span>
                        </div>
                    </div>
                </li>
            {%- endfor -%}
        </ul>
    </div>
</div>