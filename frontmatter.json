{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "layout",
          "name": "layout",
          "type": "string"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "role",
          "name": "role",
          "type": "string"
        },
        {
          "title": "projecttype",
          "name": "projecttype",
          "type": "string"
        },
        {
          "title": "year",
          "name": "year",
          "type": "number"
        },
        {
          "title": "duration",
          "name": "duration",
          "type": "string"
        },
        {
          "title": "link",
          "name": "link",
          "type": "string"
        },
        {
          "title": "award",
          "name": "award",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "preview",
          "name": "preview",
          "type": "string"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "permalink",
          "name": "permalink",
          "type": "boolean"
        },
        {
          "title": "externalLink",
          "name": "externalLink",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "11ty",
  "frontMatter.preview.host": "http://localhost:8080/projects",
  "frontMatter.content.pageFolders": [
    {
      "title": "darlo",
      "path": "[[workspace]]/src/projects/darlo"
    },
    {
      "title": "openlaw",
      "path": "[[workspace]]/src/projects/openlaw"
    },
    {
      "title": "vr",
      "path": "[[workspace]]/src/projects/vr"
    }
  ],
  "frontMatter.content.snippets": {
    "Gallery": {
      "description": "Image inside lightGallery image lightbox",
      "body": [
        "<a href=\"/[[&mediaUrl]]\">",
        "    <figure>",
        "        <img src=\"/[[&mediaUrl]]\" alt= \"[[alt text]]\"/>",
        "        <figcaption> [[image caption]] </figcaption>",
        "    </figure>",
        "</a>"
      ],
      "isMediaSnippet": true
    },
    "Video in lightGallery snippet": {
      "description": "A snippet for mp4 video in light gallery",
      "body": [
        "    <a ",
        "        data-video='{\"source\": [{\"src\":\"/[[&mediaUrl]]\", \"type\":\"video/mp4\"}], \"attributes\": {\"preload\": true}}'  ",
        "        data-sub-html=\"<p>[[video caption]]</p>\">",
        "        <video [[html video player settings]]>",
        "            <source src=\"/[[&mediaUrl]]\" type=\"video/mp4\">",
        "            <p>[[video caption]]</p>",
        "        </video>",
        "        <img src=\"[[thumbnail image]]\" style=\"display: none; visibility: hidden\"></img>",
        "    </a>"
      ],
      "isMediaSnippet": true
    }
  }
}